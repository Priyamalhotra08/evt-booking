<!DOCTYPE html>
<html lang="en">
<head>

    <!-- <link rel="stylesheet" href="assets/css/colorvariants/default.css" id="defaultscheme"> -->

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <!-- custom-styles -->
    <link rel="stylesheet" href="/styles/login.css">
    <link rel="stylesheet" href="/styles/logresponsive.css">
    <link rel="stylesheet" href="/styles/animation.css">

    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <!-- Bootstrap-5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">

    
</head>
<body>

    <!-- background -->
    <div class="ls-bg">
        <img class="ls-bg-inner" src="https://templates.seekviral.com/trimba3/forms/CompanyRegistrationPage/assets/images/bg.png" alt="">
    </div>

    <main class="overflow-hidden">
        <div class="wrapper">
            <div class="main-inner">

              
                <div class="row h-100 align-content-center">
                    <div class="col-md-6 tab-100 order_2">

                        <!-- side text -->
                        <div class="side-text">
                            <article>
                               
                                <h1 class="main-heading">Welcome</h1>
                             
                            </article>

                            <!-- login sign up button -->
                            <div class="logSign">
                                <button id="showlogin" type="button" class="active">Login</button>
                                <button id="showregister" type="button"> <a href="/register" class="text-decoration-none text-white text-capitalize">register</a> </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 tab-100">

                        <!-- form -->
                        <div class="form">
                                <h2 class="login-form form-title">
                                    Account Login
                                </h2>
                                <h2 class="signup-form form-title">
                                    Create your Account!
                                </h2>

                                <!-- login form -->
                            <form id="step1" class="login-form" action="login" method="post">
                                <div class="input-field">
                                    <input type="text" name="email" id="username" required>
                                    <label>
                                        Username or Email
                                    </label>
                                </div>
                                <div class="input-field delay-100ms">
                                    <input type="password" id="password" name="password" required>
                                    <label>
                                        Password
                                    </label>
                                </div>
                                <div class="d-flex justify-content-between flex-wrap">
                                    <div class="rememberme">
                                        <input type="checkbox" name="remember" id="rememberMe">
                                        <label for="rememberMe">Remember Me</label>
                                    </div>
                                    <a href="/forgot-password" class="forget">forget password</a>
                                </div>
                                <div class="login-btn">
                                    <button type="submit" class="login">Login to your Account!</button>
                                </div>
                            </form>

                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    

       <!-- Error Popup -->
       <div id="error-popup" style="display:none;" class="alert alert-danger position-fixed top-0  translate-middle-x mt-3 p-3" role="alert"></div>

       <!-- Display Errors -->
       <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
           <script>
               window.onload = function () {
                   const errorPopup = document.getElementById('error-popup');
                   <% errors.forEach(function(error) { %>
                       errorPopup.innerHTML += "<%= error.msg %><br>";
                   <% }); %>
                   errorPopup.style.display = 'block';
                   setTimeout(() => {
                       errorPopup.style.display = 'none';
                   }, 4000);
               };
           </script>
       <% } %>
        $(document).ready(function()
{
  setTimeout(function()
  {
    $("form .input-field").each(function()
    {
      $(this).addClass('reveal');
    })
  }, 1000)

})

    </script>
    
    <!-- Bootstrap-5 -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.min.js" integrity="sha384-VQqxDN0EQCkWoxt/0vsQvZswzTHUVOImccYmSyhJTp7kGtPed0Qcx8rK9h9YEgx+" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- My js -->
</body>
</html>